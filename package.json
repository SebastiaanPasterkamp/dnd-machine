{
  "name": "dnd-machine",
  "version": "0.1.0",
  "description": "D&D 5e information manager",
  "main": "webpack.config.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "lodash": "^4.17.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-onclickoutside": "^6.7.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "reflux": "^6.4.1",
    "sprintf-js": "^1.1.1",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.1.1",
    "jest-fetch-mock": "^1.4.1",
    "markdown-react-js": "^1.0.0",
    "node-sass": "^4.7.2",
    "progress-bar-webpack-plugin": "^1.10.0",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.2.2"
  },
  "scripts": {
    "dev": "webpack -d --watch",
    "build": "webpack -p",
    "test": "node_modules/.bin/jest --roots ui/tests/"
  },
  "jest": {
    "testMatch": [
        "**/tests/**/*.js?(x)"
    ],
    "setupFiles": [
      "<rootDir>/ui/shim.js",
      "<rootDir>/ui/setupTests.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "<rootDir>/ui/styleMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastiaanPasterkamp/dnd-machine.git"
  },
  "keywords": [
    "D&D",
    "5e"
  ],
  "author": "Sebastiaan Pasterkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastiaanPasterkamp/dnd-machine/issues"
  },
  "homepage": "https://github.com/SebastiaanPasterkamp/dnd-machine#readme"
}
