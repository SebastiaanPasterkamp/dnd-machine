{
  "name": "dnd-machine",
  "version": "0.1.0",
  "description": "D&D 5e information manager",
  "main": "webpack.config.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "lodash": "^4.17.11",
    "mathjs": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-onclickoutside": "^6.7.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "reflux": "^6.4.1",
    "sprintf-js": "^1.1.1",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.1.1",
    "jest-fetch-mock": "^1.4.1",
    "markdown-react-js": "^1.0.2",
    "node-sass": "^4.11.0",
    "progress-bar-webpack-plugin": "^1.10.0",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.2.2"
  },
  "scripts": {
    "dev": "webpack -d --watch",
    "build": "webpack -p",
    "build:production": "npm run build --  --env prod",
    "test": "node_modules/.bin/jest"
  },
  "jest": {
    "testMatch": [
      "**/*.react-test.{js,jsx}"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "__mocks__",
      "__init__"
    ],
    "setupFiles": [
      "<rootDir>/tests/__init__/shim.js",
      "<rootDir>/tests/__init__/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+.(css|scss)$": "<rootDir>/tests/__mocks__/style.js"
    },
    "modulePaths": [
      "src/jsx",
      "src/sass"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastiaanPasterkamp/dnd-machine.git"
  },
  "keywords": [
    "D&D",
    "5e"
  ],
  "author": "Sebastiaan Pasterkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastiaanPasterkamp/dnd-machine/issues"
  },
  "homepage": "https://github.com/SebastiaanPasterkamp/dnd-machine#readme"
}
