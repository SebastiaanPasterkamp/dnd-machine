{
  "name": "dnd-machine",
  "version": "0.1.0",
  "description": "D&D 5e information manager",
  "main": "webpack.config.js",
  "scripts": {
    "start": "webpack-dev-server",
    "start:debug": "DEBUG='express:*' npm run start",
    "build": "npm run build:production",
    "build:watch": "webpack --mode development --watch",
    "build:development": "webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "node_modules/.bin/jest --ci",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage"
  },
  "jest": {
    "testMatch": [
      "**/*.react-test.{js,jsx}"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "__mocks__",
      "__init__"
    ],
    "setupFiles": [
      "<rootDir>/tests/__init__/shim.js",
      "<rootDir>/tests/__init__/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+.(css|scss)$": "<rootDir>/tests/__mocks__/style.js"
    },
    "modulePaths": [
      "src/jsx",
      "src/sass"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastiaanPasterkamp/dnd-machine.git"
  },
  "keywords": [
    "D&D",
    "5e"
  ],
  "author": "Sebastiaan Pasterkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastiaanPasterkamp/dnd-machine/issues"
  },
  "homepage": "https://github.com/SebastiaanPasterkamp/dnd-machine#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "file-loader": "^6.0.0",
    "jest": "^26.0.1",
    "jest-enzyme": "^7.1.2",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react-mock-router": "^1.0.15",
    "sass-loader": "^8.0.2",
    "terser-webpack-plugin": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "core-js": "^3.6.5",
    "markdown-react-js": "^1.0.2",
    "mathjs": "^7.0.1",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-loadable": "^5.5.0",
    "react-onclickoutside": "^6.9.0",
    "react-router-dom": "^5.2.0",
    "reflux": "^6.4.1"
  }
}
