{
  "name": "dnd-machine",
  "version": "0.1.0",
  "description": "D&D 5e information manager",
  "main": "webpack.config.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "cryptiles": "^4.1.3",
    "extend": "^3.0.2",
    "hoek": "^6.1.3",
    "lodash": "^4.17.21",
    "macaddress": "^0.5.0",
    "mathjs": "^5.0.0",
    "merge": "^2.1.1",
    "node-fetch": ">=3.1.1",
    "node-forge": ">=1.3.0",
    "randomatic": "^3.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.5.0",
    "react-onclickoutside": "^6.7.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "reflux": "^6.4.1",
    "sprintf-js": "^1.1.1",
    "sshpk": "^1.16.1",
    "tar": "^4.4.18",
    "yargs-parser": ">=13.1.2"
  },
  "devDependencies": {
    "babel-jest": "21.2.0",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "css-loader": "1.0.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "enzyme-to-json": "3.6.2",
    "file-loader": "3.0.1",
    "jest": "21.2.1",
    "jest-enzyme": "4.2.0",
    "jest-fetch-mock": "3.0.3",
    "markdown-react-js": "1.0.2",
    "mini-css-extract-plugin": "0.12.0",
    "node-sass": "4.14.1",
    "optimize-css-assets-webpack-plugin": "5.0.8",
    "progress-bar-webpack-plugin": "1.12.1",
    "react-mock-router": "1.0.15",
    "react-test-renderer": "16.2.0",
    "sass-loader": "6.0.7",
    "sinon": "4.2.2",
    "webpack": "4.31.0",
    "webpack-bundle-analyzer": "4.0.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "4.1.1",
    "webpack-hot-middleware": "2.25.2"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "start:debug": "DEBUG='express:*' npm run start",
    "build": "npm run build:production",
    "build:watch": "webpack --mode development --watch",
    "build:development": "webpack --mode development",
    "build:production": "webpack --mode production",
    "test": "jest --ci",
    "test:watch": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage && sed -ri 's/\\/dnd-machine/./g' coverage/lcov.info"
  },
  "jest": {
    "testMatch": [
      "**/*.react-test.{js,jsx}"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "__mocks__",
      "__init__"
    ],
    "setupFiles": [
      "<rootDir>/tests/__init__/shim.js",
      "<rootDir>/tests/__init__/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+.(css|scss)$": "<rootDir>/tests/__mocks__/style.js"
    },
    "modulePaths": [
      "src/jsx",
      "src/sass"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastiaanPasterkamp/dnd-machine.git"
  },
  "keywords": [
    "D&D",
    "5e"
  ],
  "author": "Sebastiaan Pasterkamp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SebastiaanPasterkamp/dnd-machine/issues"
  },
  "homepage": "https://github.com/SebastiaanPasterkamp/dnd-machine#readme"
}
